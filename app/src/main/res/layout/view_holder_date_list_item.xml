<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="20dp"
    android:background="@color/colorPrimaryDark"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="71dp"
        android:paddingTop="@dimen/margin_card_medium"
        android:paddingBottom="10dp"
        android:background="@drawable/grey_color_grey_background"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/vOne"
            android:layout_width="22dp"
            android:layout_height="5dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/black_circle_small_background" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvDateOfToday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/vOne"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="9dp"
            android:text="Today"
            android:textColor="@color/black"
            android:textSize="@dimen/text_regular" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvDateOfDay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvDateOfToday"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="7dp"
            android:text="May"
            android:textColor="@color/black"
            android:textSize="@dimen/text_regular" />


        <androidx.appcompat.widget.AppCompatTextView
            android:layout_below="@+id/tvDateOfDay"
            android:id="@+id/tvDay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="8"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            android:textSize="@dimen/text_regular_2x" />

        <View
            android:layout_marginTop="12dp"
            android:layout_below="@+id/tvDateOfDay"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="-5dp"
            android:background="@drawable/black_circle_small_background" />

        <View
            android:layout_marginTop="12dp"
            android:layout_below="@+id/tvDateOfDay"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="-5dp"
            android:background="@drawable/black_circle_small_background" />

    </RelativeLayout>



</RelativeLayout>


