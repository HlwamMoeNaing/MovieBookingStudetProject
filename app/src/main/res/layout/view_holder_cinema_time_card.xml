<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_10dp"
    android:layout_marginEnd="@dimen/margin_10dp"
    android:background="@drawable/cinema_time_card_background"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingStart="@dimen/margin_15dp"
    android:paddingTop="@dimen/margin_medium"
    android:paddingEnd="@dimen/margin_15dp"
    android:paddingBottom="@dimen/margin_medium">

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/white"
        android:text="6:30 AM"
         />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_5dp"
        android:textColor="@color/white"
        android:gravity="center"
        android:text="3D DBOX"
         />

    <androidx.appcompat.widget.AppCompatTextView
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_5dp"
        android:gravity="center"
        android:text="Screen 2"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_5dp"
        android:gravity="center"
        android:text="21 Available"
         />

</LinearLayout>