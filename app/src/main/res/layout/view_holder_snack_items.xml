<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/foodItemListMoviesFood"
    android:layout_width="170dp"
    android:layout_height="220dp"
    android:layout_margin="@dimen/margin_medium"
    android:background="@drawable/snack_bavkground">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivFoodImageMoviesFood"
        android:layout_width="100dp"
        android:layout_height="@dimen/margin_100_dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_card_medium_2"
        android:elevation="@dimen/margin_small"
        app:srcCompat="@drawable/sweet_potato" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvFoodNameMoviesFood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivFoodImageMoviesFood"
        android:layout_marginStart="@dimen/margin_10dp"
        android:layout_marginTop="@dimen/margin_medium_3"
        android:elevation="@dimen/margin_small"
        android:text="Potato Chip"
        android:textColor="@color/white"
        android:textSize="@dimen/text_small" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvFoodPriceMoviesFood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvFoodNameMoviesFood"
        android:layout_marginStart="@dimen/margin_10dp"
        android:layout_marginTop="@dimen/margin_5dp"
        android:elevation="@dimen/margin_small"
        android:text="1000KS"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/text_small" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/btnAddMoviesFood"
        android:layout_width="150dp"
        android:layout_height="25dp"
        android:layout_below="@+id/tvFoodPriceMoviesFood"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_10dp"
        android:elevation="@dimen/margin_small"
        android:scaleType="centerCrop"
        android:visibility="gone"
        app:srcCompat="@drawable/add_button_snack" />

    <LinearLayout
        android:id="@+id/llFoodAddMinusMoviesFood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvFoodPriceMoviesFood"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/margin_10dp"
        android:layout_marginEnd="@dimen/margin_10dp"
        android:elevation="@dimen/margin_small"
        android:orientation="horizontal"
        android:visibility="visible">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/btnPlusMoviesFood"
            android:layout_width="@dimen/height_action_bar_icon_24dp"
            android:layout_height="@dimen/height_action_bar_icon_24dp"
            android:layout_gravity="bottom"
            android:elevation="@dimen/margin_small"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/add_food_icon" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvFoodCountMoviesFood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginStart="@dimen/margin_15dp"
            android:layout_marginEnd="@dimen/margin_15dp"
            android:gravity="top"
            android:text="1"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/text_regular_2x" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/btnMinusMoviesFood"
            android:layout_width="@dimen/height_action_bar_icon_24dp"
            android:layout_height="@dimen/height_action_bar_icon_24dp"
            android:layout_gravity="center_vertical"
            android:elevation="@dimen/margin_small"
            app:srcCompat="@drawable/minus_food_icon" />

    </LinearLayout>


</RelativeLayout>